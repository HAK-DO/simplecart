<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<!--
    Validation Rules for the Ward List Web Application

    $Id: validation.xml,v 1.15 2004/09/03 04:38:57 niallp Exp $
-->

<form-validation>

    <!-- ========== Default Language Form Definitions ===================== -->
    <formset>

        <form name="/PersistCategory">
            <field property="id" depends="long">
                <arg key="prompt.id"/>
            </field>
            <field property="name" depends="required">
                <arg key="promptCatalogItem.name"/>
            </field>
            <field property="description" depends="required">
                <arg key="promptCatalogItem.description"/>
            </field>
            <field property="searchMetaAuthor">
                <arg key="promptSearchUtility.searchMetaAuthor"/>
            </field>
            <field property="searchMetaKeywords">
                <arg key="promptSearchUtility.searchMetaKeywords"/>
            </field>
            <field property="searchMetaDescription">
                <arg key="promptSearchUtility.searchMetaDescription"/>
            </field>
            <field property="searchMetaDate">
                <arg key="promptSearchUtility.searchMetaDate"/>
            </field>
            <field property="searchMetaCopyright">
                <arg key="promptSearchUtility.searchMetaCopyright"/>
            </field>
        </form>

        <form name="/PersistProduct">
            <field property="id" depends="long">
                <arg key="prompt.id"/>
            </field>
            <field property="categoryId" depends="required,long">
                <arg key="promptCategory.chooseParent"/>
            </field>
            <field property="name" depends="required">
                <arg key="promptCatalogItem.name"/>
            </field>
            <field property="description" depends="required">
                <arg key="promptCatalogItem.description"/>
            </field>
            <field property="searchMetaAuthor">
                <arg key="promptSearchUtility.searchMetaAuthor"/>
            </field>
            <field property="searchMetaKeywords">
                <arg key="promptSearchUtility.searchMetaKeywords"/>
            </field>
            <field property="searchMetaDescription">
                <arg key="promptSearchUtility.searchMetaDescription"/>
            </field>
            <field property="searchMetaDate">
                <arg key="promptSearchUtility.searchMetaDate"/>
            </field>
            <field property="searchMetaCopyright">
                <arg key="promptSearchUtility.searchMetaCopyright"/>
            </field>
        </form>

        <form name="/PersistOption">
            <field property="id" depends="long">
                <arg key="prompt.id"/>
            </field>
            <field property="productId" depends="required,long">
                <arg key="promptProduct.chooseParent"/>
            </field>
            <field property="name" depends="required">
                <arg key="promptCatalogItem.name"/>
            </field>
            <field property="description" depends="required">
                <arg key="promptCatalogItem.description"/>
            </field>
            <field property="searchMetaAuthor">
                <arg key="promptSearchUtility.searchMetaAuthor"/>
            </field>
            <field property="searchMetaKeywords">
                <arg key="promptSearchUtility.searchMetaKeywords"/>
            </field>
            <field property="searchMetaDescription">
                <arg key="promptSearchUtility.searchMetaDescription"/>
            </field>
            <field property="searchMetaDate">
                <arg key="promptSearchUtility.searchMetaDate"/>
            </field>
            <field property="searchMetaCopyright">
                <arg key="promptSearchUtility.searchMetaCopyright"/>
            </field>
            <field property="stockKeepingUnitIdentifier" depends="required">
                <arg key="promptOption.stockKeepingUnitIdentifier"/>
            </field>
            <field property="unitPriceManufacturerSuggestedRetail" depends="float">
                <arg key="promptOption.unitPriceMSR"/>
            </field>
            <field property="unitPriceActualRetail" depends="float">
                <arg key="promptOption.unitPriceActualRetail"/>
            </field>
            <field property="unitWeightInOunces" depends="float">
                <arg key="promptOption.unitWeightInOunces"/>
            </field>
        </form>

        <form name="/PersistAdministrator">
            <field property="id" depends="long">
                <arg key="prompt.id"/>
            </field>
            <field property="nameFirst" depends="required">
                <arg key="promptParty.nameFirst"/>
            </field>
            <field property="nameLast" depends="required">
                <arg key="promptParty.nameLast"/>
            </field>
            <field property="username" depends="required">
                <arg key="promptParty.username"/>
            </field>            
            <field property="password" depends="validwhen,required,minlength,maxlength">
                <arg0 key="promptParty.password"/>
                <arg1  key="${var:minlength}" name="minlength"
                   resource="false"/>
                <arg2  key="${var:maxlength}" name="maxlength"
                   resource="false"/>
                <arg3 key="${var:validityConstraint}" name="validwhen" 
                   resource="false"/>
                <var>
                    <var-name>test</var-name>
                    <var-value>(passwordConfirm == password)</var-value>
                </var>
                <var>
                    <var-name>validityConstraint</var-name>
                    <var-value>Passwords must match!</var-value>
                </var>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>16</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
            </field>
            <field property="passwordConfirm" depends="required">
                <arg key="promptParty.passwordConfirm"/>
            </field>
            <field property="emailAddress" depends="required,email">
                <arg key="promptParty.emailAddress"/>
            </field>
            <field property="streetLine1">
                <arg key="promptAddress.streetLine1"/>
            </field>
            <field property="streetLine2">
                <arg key="promptAddress.streetLine2"/>
            </field>
            <field property="city">
                <arg key="promptAddress.city"/>
            </field>
            <field property="state">
                <arg key="promptAddress.state"/>
            </field>
            <field property="postalCode">
                <arg key="promptAddress.postalCode"/>
            </field>
        </form>

    </formset>


</form-validation>
